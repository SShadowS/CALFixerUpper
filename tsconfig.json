{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "lib": ["es6", "es2015", "dom"],
      "declaration": true,
      "outDir": "lib",
      "rootDir": "src",
      "strict": true,
      "types": ["node"],
      "esModuleInterop": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "paths": {
        "*": [
            "./node_modules/*",
            "./src/types/*"
        ]
      }
    }
  }